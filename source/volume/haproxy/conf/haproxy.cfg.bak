# config for haproxy

#---------------------------------------------------------------------
# Global settings
#---------------------------------------------------------------------
global
    log      127.0.0.1 local0 #[err warning info debug]
    maxconn  20000
    ulimit-n 41000
    nbproc   2
    stats bind-process 1
    daemon
    tune.ssl.default-dh-param 2048

#---------------------------------------------------------------------
# common defaults that all the 'listen' and 'backend' sections will
# use if not designated in their block
#---------------------------------------------------------------------
defaults
    mode    http
    log     global
    #option  httplog
    option  dontlognull
    #option  abortonclose
    #option  forceclose
    #option  httpclose
    #option  http-server-close
    option  nolinger
    #option  originalto
    #option  forwardfor except 127.0.0.0/8
    option  redispatch
    retries 3
    timeout http-request    10s
    timeout queue           1m
    timeout connect         5s
    timeout client          1m
    timeout server          1m
    timeout http-keep-alive 10s
    timeout check           10s
    maxconn 32000
    balance roundrobin

#---------------------------------------------------------------------
# listen admin
#---------------------------------------------------------------------
listen admin
    bind            *:9000
    bind-process    1
    mode            http
    stats           enable
    stats           hide-version
    stats refresh   10s
    stats uri       /admin?stats
    stats realm     haproxy\Statistics
    stats auth      admin:admin
    stats admin     if TRUE

    capture request  header Host           len 40
    capture request  header Content-Length len 10
    capture request  header Referer        len 200
    capture response header Server         len 40
    capture response header Content-Length len 10
    capture response header Cache-Control  len 8

#---------------------------------------------------------------------
# listen media
#---------------------------------------------------------------------
listen media
    bind            *:554
    bind-process    1-4
    mode            tcp
    balance         source
    option          redispatch
    server          server01 192.168.180.188:554 check inter 2000

#---------------------------------------------------------------------
# frontend frontend_web01
#---------------------------------------------------------------------
frontend frontend_web01
    bind            *:8080
    bind            *:8443 ssl crt /usr/local/etc/haproxy/server.pem
    bind-process    1-4
    mode            http
    log             global
    option          httplog
    option          dontlognull
    option          originalto
    option          forwardfor
    monitor-uri     /monitoruri
    reqadd          X-Forwarded-Proto:\ https
    maxconn         8000
    timeout client  30s
    stats uri       /admin/stats
    default_backend backend_web01

#---------------------------------------------------------------------
# backend backend_web01
#---------------------------------------------------------------------
backend backend_web01
    bind-process    1-4
    mode            http
    balance         source
    option          prefer-last-server
    option          redispatch
    retries         2
    timeout connect 3s
    timeout server  300s
    option  httpchk HEAD /info?healthcheck=true
    server          server01 192.168.8.236:8080 check inter 2000
    #server          server02 192.168.8.237:8080 check inter 2000
